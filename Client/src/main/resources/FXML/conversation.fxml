<GridPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.ui.controllers.ConversationController">
   <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="0.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="390.000030517578" vgrow="ALWAYS" />
      <RowConstraints maxHeight="75.0" minHeight="10.0" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <StackPane minHeight="-Infinity" minWidth="-Infinity" styleClass="right-top" stylesheets="@../styling/main.css">
         <GridPane.margin>
            <Insets bottom="1.0" right="1.0" top="1.0" />
         </GridPane.margin>
         <children>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" maxWidth="50.0" />
                  <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="90.0" />
                  <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets left="8.0" />
                     </GridPane.margin>
                     <children>
                        <Label fx:id="currConvContact" text=" " textFill="#5a6674">
                           <font>
                              <Font name="Segoe UI Semibold" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="currConvStatus" text=" " />
                     </children>
                  </VBox>
                  <Circle fx:id="currConvAvatar" fill="WHITE" radius="23.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="3.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </children>
      </StackPane>
      <StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="80.0" styleClass="Content-Tab" stylesheets="@../styling/main.css" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="1.0" right="1.0" top="1.0" />
         </GridPane.margin>
         <children>
            <ScrollPane fx:id="conversationPane" fitToWidth="true" styleClass="Content-Tab" stylesheets="@../styling/main.css">
               <content>
                  <ListView fx:id="messagesListView" />
               </content></ScrollPane>
         </children>
      </StackPane>
      <HBox maxHeight="1.7976931348623157E308" prefWidth="200.0" spacing="7.0" styleClass="bottom-right" stylesheets="@../styling/main.css" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
         <children>
            <TextField fx:id="messageTextField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#sendMessage" prefHeight="43.0" styleClass="Primary-Button" stylesheets="@../styling/styling.css">
               <font>
                  <Font name="Segoe UI Semibold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </Button>
         </children>
         <GridPane.margin>
            <Insets bottom="1.0" top="1.0" />
         </GridPane.margin>
         <padding>
            <Insets bottom="18.0" left="18.0" right="18.0" top="18.0" />
         </padding>
      </HBox>
   </children>
</GridPane>
